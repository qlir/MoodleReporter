<Window x:Class="UIReporter.AccessoryWindow.SendReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SendReportWindow" Height="300" Width="300"
        Style="{StaticResource WindowStyle}"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock Name="StatusTextBlock" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
        <TextBox Name="DatailsTextBox" Style="{StaticResource TextBoxStyle}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Grid.Row="1"/>
        <Button Grid.Row="2" HorizontalAlignment="Right" Margin="0,5,5,5" Click="ButtonBase_OnClick" >ОК</Button>
    </Grid>
</Window>
